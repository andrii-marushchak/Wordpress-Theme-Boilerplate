{
  "name": "Wp Theme Starter",
  "version": "1.0.0",
  "description": "Starter theme depend on ACF flexible content approach",
  "scripts": {
    "translate": "wp-pot --src '**/**/**/*.php' --exclude '**/node_modules/**' --exclude '**/vendors/**' --dest-file 'lang/hakkoda.pot' --package '{{hakkoda}}' --domain '{{hakkoda.io}}' --last-translator '{{Andrii}} <{{Andrii_Marushchak@Hakkoda.io}}>'",
    "enforce-lf": "sudo find . -type d \\( -path './node_modules' -o -path './vendor' \\) -prune -o -type f -exec dos2unix {} +",
    "rm-extra-files": "find . -type f -name \"*.Identifier\" -print0 | xargs -0 rm -v"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.4",
    "cssnano": "^7.1.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.1",
    "globals": "^16.3.0",
    "gulp": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-notify": "^5.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^10.0.0",
    "gulp-rename": "^2.1.0",
    "gulp-replace": "^1.1.4",
    "gulp-rimraf": "^1.0.0",
    "gulp-sass": "^6.0.1",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "sass": "^1.92.0",
    "stylelint": "^16.19.1",
    "stylelint-scss": "^6.12.0",
    "swiper": "^11.2.10",
    "vinyl-named": "^1.1.0",
    "webpack-stream": "^7.0.0"
  },
  "browserslist": [
    "last 5 versions",
    "> 1%",
    "not dead"
  ],
  "dependencies": {
    "get-scrollbar-width": "^1.0.5"
  }
}
